export const clear<%= classifyName %>Error = createAction('[<%= classifyName %>] Clear Error');

export const add<%= classifyName %> = createAction(
  '[<%= classifyName %>] Add <%= classifyName %>',
  props<{ <%= propertyName %>: <% if (createModel) { %><%= classifyName %><% } else { %>any<% } %> }>()
);

export const update<%= classifyName %> = createAction(
  '[<%= classifyName %>] Update <%= classifyName %>',
  props<{ <%= propertyName %>: <% if (createModel) { %><%= classifyName %><% } else { %>any<% } %> }>()
);

export const delete<%= classifyName %> = createAction(
  '[<%= classifyName %>] Delete <%= classifyName %>',
  props<{ id: string }>()
