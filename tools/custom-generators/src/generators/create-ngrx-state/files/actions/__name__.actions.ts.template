import { createAction, props } from '@ngrx/store';
<% if (entityType === 'list') { %>
<% if (createModel) { %>
import { <%= classifyName %> } from '@cpark/models';
<% } %>

export const load<%= classifyName %> = createAction('[<%= classifyName %>] Load <%= classifyName %>');

export const load<%= classifyName %>Success = createAction(
  '[<%= classifyName %>] Load <%= classifyName %> Success',
