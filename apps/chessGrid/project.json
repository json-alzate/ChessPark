{
  "name": "chessGrid",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/chessGrid/src",
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/chessGrid",
        "browser": "apps/chessGrid/src/main.ts",
        "polyfills": ["zone.js", "apps/chessGrid/src/polyfills.ts"],
        "tsConfig": "apps/chessGrid/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/chessGrid/src/assets",
            "output": "assets"
          }
        ],
        "styles": [
          "apps/chessGrid/src/global.scss",
          "apps/chessGrid/src/theme/variables.scss",
          "apps/chessGrid/src/theme/board.scss"
        ],
        "index": "apps/chessGrid/src/index.html"
      },
      "configurations": {
        "production": {
          "outputHashing": "all",
          "fileReplacements": [
            {
              "replace": "apps/chessGrid/src/environments/environment.ts",
              "with": "apps/chessGrid/src/environments/environment.prod.ts"
            }
          ]
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "chessGrid:build:production"
        },
        "development": {
          "buildTarget": "chessGrid:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/chessGrid/jest.config.ts"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "firebase deploy --only hosting:chessgrid",
        "cwd": "."
      },
      "dependsOn": ["build"]
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "chessGrid:build",
        "port": 4201,
        "staticFilePath": "dist/apps/chessGrid/browser",
        "spa": true
      }
    }
  }
}
