{
  "targets": {
    "deploy-all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build chesspark",
          "nx build chessCoordinatesTrainer", 
          "nx build chessColate",
          "firebase deploy"
        ],
        "parallel": false
      }
    },
    "deploy-chesspark": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build chesspark",
          "firebase deploy --only hosting:chesspark"
        ],
        "parallel": false
      }
    },
    "deploy-chessCoordinatesTrainer": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build chessCoordinatesTrainer",
          "firebase deploy --only hosting:chessCoordinatesTrainer"
        ],
        "parallel": false
      }
    },
    "deploy-chessColate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build chessColate",
          "firebase deploy --only hosting:chessColate"
        ],
        "parallel": false
      }
    }
  }
}
